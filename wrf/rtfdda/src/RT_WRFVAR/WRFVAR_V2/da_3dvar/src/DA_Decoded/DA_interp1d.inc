 FUNCTION interp1d (kk, dk0, field1d, dimk) &
 RESULT  (val)
!------------------------------------------------------------------------------!

    IMPLICIT NONE

    INTEGER :: kk
    INTEGER :: dimk
    REAL    :: dk0 
    REAL    :: val
    REAL, DIMENSION (dimk) :: field1d

    REAL    :: dk1 
!------------------------------------------------------------------------------!
         
    dk1 = 1. - dk0

    val =  dk0 * field1d (kk+1) + dk1 * field1d (kk)

 END FUNCTION interp1d
!------------------------------------------------------------------------------!
